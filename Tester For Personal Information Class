        System.out.println(" Address :" + self.getAddress());

        System.out.println(" Age :" + self.getAge());

        System.out.println(" Phone Number :" + self.getPhone());

        input2 = JOptionPane.showInputDialog(" What is your first name? ");
        friend.setFName(input2);

        input2 = JOptionPane.showInputDialog(" What is your last name? ");
        friend.setLName(input2);

        input2 = JOptionPane.showInputDialog(" What is your address ? ");
        friend.setAddress(input2);

        input2 = JOptionPane.showInputDialog(" What is your age? ");
        ageS = Integer.parseInt(input2);
        friend.setAge(ageS);

        input2 = JOptionPane.showInputDialog(" What is your Phone Number ? ");
        friend.setPhone(input2);

        System.out.println(" Name :" + friend.getFName() + " " + friend.getLName());

        System.out.println(" Address :" + friend.getAddress());

        System.out.println(" Age :" + friend.getAge());

        System.out.println(" Phone Number :" + friend.getPhone());

        input2 = JOptionPane.showInputDialog(" What is your first name? ");
        family.setFName(input2);

        input2 = JOptionPane.showInputDialog(" What is your last name? ");
        family.setLName(input2);

        input2 = JOptionPane.showInputDialog(" What is your address ? ");
        family.setAddress(input2);

        input2 = JOptionPane.showInputDialog(" What is your age? ");
        ageS = Integer.parseInt(input2);
        family.setAge(ageS);

        input2 = JOptionPane.showInputDialog(" What is your Phone Number ? ");
        family.setPhone(input2);

        System.out.println(" Name :" + family.getFName() + " " + family.getLName());

        System.out.println(" Address :" + family.getAddress());

        System.out.println(" Age :" + family.getAge());

