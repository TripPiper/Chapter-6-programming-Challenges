package chapter.pkg6;

/**
 *
 * @author Me
 */
public class RetailItems {

    private String description;
    private int units;
    private double price;

    public RetailItems(String d, int u, double p) {
        description = d;
        units = u;
        price = p;
    }

    public void setDescription(String d) {
        description = d;
    }

    public void setUnitOnHold(int u) {
        units = u;
    }

    public void setPrice(double p) {
        price = p;
    }

    public String getDescription() {
        return description;
    }

    public int getUnitOnHold() {
        return units;
    }

    public double getPrice() {
        return price;
    }

}
